programa {
  funcao inicio()
  {
    /*
    Sequencia de testes:
    */

    calculeMedia()
  }

  funcao calculeMedia()
  {
    inteiro a, b, c

    escreva("Digite o numero inteiro A: ")
    leia(a)
    escreva("Digite o numero inteiro B: ")
    leia(b)
    escreva("Digite o numero inteiro C: ")
    leia(c)

    real media = (a+b+c)/3
    escreva("A sua média  é: ", media, "\n")
  }
}
